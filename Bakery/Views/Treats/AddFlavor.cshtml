@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat;

@if(ViewBag.num != 0)
{
  <h3>Add a flavor to treat @Html.DisplayFor(model => model.Name):</h3>
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.TreatId)

    @Html.Label("Select a flavor")
    @Html.DropDownList("FlavorId")
    
    <input type="submit" value="Save" />
  }
}
else
{
  <h3>There are no more flavors</h3>
}